<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="240.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.currencyexchange.controllers.CashierController">
   <children>
      <BorderPane fx:id="mainBorderPane" prefHeight="240.0" prefWidth="320.0">
         <top>
            <ButtonBar BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClick" text="Вихід" />
              </buttons>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ButtonBar>
         </top>
         <center>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="exchangeButton" mnemonicParsing="false" onAction="#onExchangeButtonClick" prefWidth="200.0" text="Додати операцію" />
                  <Button fx:id="changeButton" mnemonicParsing="false" onAction="#onChangeButtonClick" prefWidth="200.0" text="Змінити курс валют" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
